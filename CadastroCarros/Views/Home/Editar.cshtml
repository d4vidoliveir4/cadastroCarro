@using Dominio.Entidades
@model Home
@{
    ViewBag.Title = "Carro";
}
<div id="corpoPrincipal">
    @using (Html.BeginForm("Salvar", "Home", FormMethod.Post, new { id = "cadastro" }))
    {
        <div class="formulario">
           
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })             
            <div class="form-group">
                @Html.Label("Placa")
                @Html.EditorFor(model => model.Carro.Placa, new { htmlAttributes = new { @class = "form-control"} })
            </div>    
            <div class="form-group">
                @Html.Label("Modelo")
                @Html.EditorFor(model => model.Carro.Modelo, new { htmlAttributes = new { @class = "form-control"} })
            </div>          
            <div class="form-group">
                @Html.Label("Montadora")
                @Html.EditorFor(model => model.Carro.Montadora, new { htmlAttributes = new { @class = "form-control" } })
            </div> 
            @Html.HiddenFor(m => m.Carro.Id)
             <div class="botoes">
                <input type="submit" value="Salvar" id='salvar' class="btnPadrao" />
            </div>
        </div>
    }
</div>